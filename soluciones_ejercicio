    'pistola': [12, 13, 4, 5, 20, 17], 
    'ametralladora': [33, 40], 
    'escopeta': [2, 2, 2, 1] 
}

tiros_totales = []

for tipos_arma , balas in cargadores.items():
  if tipos_arma in armas:
    tiros_totales = balas + tiros_totales

print(sum(tiros_totales))

